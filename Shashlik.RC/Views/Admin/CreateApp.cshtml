@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="text-center">
        <p style="color:red">
            @ViewData["Errors"]
        </p>
    </div>
    <form asp-action="CreateApp" class="form-horizontal">
        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">App名称</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="Name" id="Name" placeholder="App名称">
            </div>
        </div>
        <div class="form-group">
            <label for="Desc" class="col-sm-2 control-label">App描述</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="Desc" id="Desc" placeholder="App描述">
            </div>
        </div>
        <div class="form-group">
            <label for="Password" class="col-sm-2 control-label">登录密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" name="Password" id="Password" placeholder="登录密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">确认新增</button>
            </div>
        </div>
    </form>
</div>
