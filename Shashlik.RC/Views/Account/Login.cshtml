@{
    ViewData["Title"] = "Home Page";
}



<div>
    <div class="text-center">
        <p style="color:red">
            @ViewData["Errors"]
        </p>
    </div>

    <form asp-action="Login" class="form-horizontal">
        <div class="form-group">
            <label for="UserName" class="col-sm-2 control-label">AppId</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="UserName" id="UserName" placeholder="AppId">
            </div>
        </div>
        <div class="form-group">
            <label for="Password" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" name="Password" id="Password" placeholder="登录密码">
            </div>
        </div>
        <div class="form-group">
            <label for="Code" class="col-sm-2 control-label">验证码</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="Code" id="Code" placeholder="验证码">
            </div>
            <div class="col-sm-4">
                <img src="" id="loginImgCode" style="cursor:pointer;" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">登录</button>
            </div>
        </div>
    </form>
    <script type="text/javascript">
        (function () {
            var el = document.getElementById('loginImgCode');

            el.addEventListener('click', function (ev) {
                ev.target.setAttribute('src', '/account/code?t=' + new Date().getTime());
            });

            el.setAttribute('src', '/account/code?t=' + new Date().getTime());
        })();
    </script>
</div>
